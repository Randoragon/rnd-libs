all: main

main:
	@printf -- "--- LINKEDLIST ---\n"
	$(MAKE) -C linkedlist $@
	@printf -- "------------------\n\n"
	@printf -- "--- HASHMAP ---\n"
	$(MAKE) -C hashmap $@
	@printf -- "---------------\n\n"
	@printf -- "--- QUEUE ---\n"
	$(MAKE) -C queue $@
	@printf -- "-------------\n\n"
	@printf -- "--- GAME ---\n"
	$(MAKE) -C game $@
	@printf -- "------------\n\n"
	@printf -- "--- ERRMSG ---\n"
	$(MAKE) -C errmsg $@
	@printf -- "--------------\n\n"

clean:
	@printf -- "--- LINKEDLIST ---\n"
	$(MAKE) -C linkedlist $@
	@printf -- "------------------\n\n"
	@printf -- "--- HASHMAP ---\n"
	$(MAKE) -C hashmap $@
	@printf -- "---------------\n\n"
	@printf -- "--- QUEUE ---\n"
	$(MAKE) -C queue $@
	@printf -- "-------------\n\n"
	@printf -- "--- GAME ---\n"
	$(MAKE) -C game $@
	@printf -- "------------\n\n"
	@printf -- "--- ERRMSG ---\n"
	$(MAKE) -C errmsg $@
	@printf -- "--------------\n\n"

install:
	@printf -- "--- LINKEDLIST ---\n"
	$(MAKE) -C linkedlist $@
	@printf -- "------------------\n\n"
	@printf -- "--- HASHMAP ---\n"
	$(MAKE) -C hashmap $@
	@printf -- "---------------\n\n"
	@printf -- "--- QUEUE ---\n"
	$(MAKE) -C queue $@
	@printf -- "-------------\n\n"
	@printf -- "--- GAME ---\n"
	$(MAKE) -C game $@
	@printf -- "------------\n\n"
	@printf -- "--- ERRMSG ---\n"
	$(MAKE) -C errmsg $@
	@printf -- "--------------\n\n"
